<%= form_for @question_group do |f| %>
  <div class="row">
    <div class="form-group col-6">
      <%= f.label :title %>
      <%= f.text_field :name, class: "form-control form-control-sm", required: true %>
    </div>
    <div class="form-group col-6">
      <%= f.label :field %>
      <%= f.collection_select :field_id, Field.all, :id, :name, {}, { class: "form-control form-control-sm" } %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-12">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control form-control-sm", rows: 5 %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-4">
      <%= f.label :how_many_easy_questions %>
      <%= f.number_field :easy, in: 0..15, value: 0, class: "form-control form-control-sm", required: true %>
    </div>
    <div class="form-group col-4">
      <%= f.label :how_many_medium_questions %>
      <%= f.number_field :medium, in: 0..15, value: 0, class: "form-control form-control-sm", required: true %>
    </div>
    <div class="form-group col-4">
      <%= f.label :how_many_hard_questions %>
      <%= f.number_field :hard, in: 0..15, value: 0, class: "form-control form-control-sm", required: true %>
    </div>
  </div>

  <%= f.submit "Submit", class: "btn btn-secondary" %>
<% end %>
