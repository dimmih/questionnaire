<div class="">
  <% @question_groups.each do |question_group| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= question_group.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= question_group.created_at.strftime("%d %b %Y") %></h6>
        <p class="card-text"><%= question_group.description.truncate(27) unless question_group.description.nil? %></p>
      </div>
      <div class="card-footer bg-transparent border-0">
        <%= link_to "Standard PDF", standard_question_group_path(question_group), target: "_blank" %>
        <%= link_to "PDF With correct answers", correct_answers_question_group_path(question_group), target: "_blank" %>
      </div>
    </div> <!-- First card -->
  <% end %>
</div>

<div class="d-flex justify-content-center">
  <%= will_paginate @question_groups %>
</div>
