% Title
\begin{center}
\textbf{\huge <%= @question_group.name %>}
\end{center}\vskip1em

% Description
\noindent \textit{<%= @question_group.description %>}\\\\

<% @question_group.questions.each do |question| %>
  <% if question.text? %>
    \Qitem{\Qq{<%= question.value_qm %>} \Qlines{3}}
  <% elsif question.yes_no? %>
    \Qitem{\Qq{<%= question.value_qm %>}}
    \Qyesno
  <% else %>
    \Qitem{\Qq{<%= question.value_qm %>}}
    \begin{Qanswers}
    \item Lorem ipsum dolor sit amet.
    \item Something about sport or medicine.
    \item I dont know what to write.
    \end
  <% end %>
<% end %>
