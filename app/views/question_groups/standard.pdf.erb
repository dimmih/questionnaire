% Title
\begin{center}
\textbf{\huge <%= @question_group.name %>}
\end{center}\vskip1em

% Description
\noindent \textit{<%= @question_group.description %>}\\\\

<% @question_group.questions.each do |question| %>
  <% if question.open_question? %>
    \Qitem{\Qq{<%= question.value_qm %>} \Qlines{3}}
  <% elsif question.multiple_choice? %>
    \Qitem{\Qq{<%= question.value_qm %>}}
    \begin{Qanswers}
      <% question.answers.each do |answer| %>
        \item <%= answer.value %>
      <% end %>
    \end{Qanswers}
  <% end %>
<% end %>
