<div class="mb-3">
  <%= link_to 'Add Question', new_question_path, class: 'btn btn-sm btn-secondary' %>
  <%= link_to 'Add Field', new_field_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-sm btn-secondary'} %>
  <%= link_to 'Generate questionnaire', new_question_group_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-secondary float-right'} %>
</div>

<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content"></div>
  </div>
</div>

<table class="table table-hover">
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td class=<%= question.difficulty %>>
          <p><%= question.value_qm %></p>
          <p class="text-black-50 my-0"><%= "#{question.field.name} - #{question.kind.humanize} question" %></p>
        </td>
        <td>
          <div class="btn-group" role="group">
            <button id="actionsBtn" type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle mt-2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Actions
            </button>
            <div class="dropdown-menu" aria-labelledby="actionsBtn">
              <%= link_to 'Delete', question_path(question), class: "dropdown-item", method: :delete %>
              <%= link_to 'Edit', edit_question_path(question), class: 'dropdown-item'  %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center">
  <%= will_paginate @questions %>
</div>
