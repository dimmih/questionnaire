<table class="table table-hover">
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td>
          <p><%= question.value_qm %></p>
          <p class="text-black-50 my-0"><%= question.field.name %></p>
        </td>
        <td>
          <div class="btn-group" role="group">
            <button id="actionsBtn" type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle mt-2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Actions
            </button>
            <div class="dropdown-menu" aria-labelledby="actionsBtn">
              <%= link_to 'Delete', question_path(question), class: "dropdown-item", method: :delete %>
              <a class="dropdown-item" href="#">Dropdown link</a>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>